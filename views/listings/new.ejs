<%=layout("/layouts/boilerplate")%>
<div class="row">
<div class="col-8 offset-2">
    <h3>Create a new Listing</h3>
 <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="enter title" type="text" class="form-control"
        required>
   <div class="valid-feedback">Title looks good!</div>
    </div>
    
    <br/><br/> 
    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]"class="form-control"required ></textarea>
   <div class="invalid-feedback">Please enter a short description</div>
    </div>
    <br/><br/>
    <!-- <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>
        <input name="listing[image]" placeholder="enter image URL/Link" type="text"class="form-control">
        
    </div> -->
    

    <!-- Dropdown for selecting category -->
     <div class="mb-3">
      <label for="category">Category:</label>
      <select class="form-label" name="listing[category]" id="category" required>
          <option value="" disabled selected>Select a category</option>
          <option value="Castles">Castles</option>
          <option value="Iconic Cities">Iconic Cities</option>
          <option value="Rooms">Rooms</option>
          <option value="Mountains">Mountains</option>
          <option value="Amazing Pools">Amazing Pools</option>
      </select>
      
     </div>
    

      
      <br>
      <br>
    <div class="mb-3">
        <label for="image" class="form-label">Upload a Image</label>
        <input name="listing[image]"  type="file"class="form-control" required>
        
    </div>
    <br/><br/>
    <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]" placeholder="enter price" type="number"class="form-control" required>
        <div class="invalid-feedback">Please enter valid Price</div>
    </div>
    <br/><br/>
    <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input name="listing[location]" placeholder="enter location" type="text"class="form-control"required>
        <div class="invalid-feedback">loaction should be correct</div>
    </div>
   
    <br/><br/>
    <div class="mb-3">
        <label for="listing" class="form-label">Country</label>
        <input name="listing[country]" placeholder="enter country" type="text"class="form-control"required>
        <div class="invalid-feedback">Country should be correct</div>
    </div>
   
    <br/><br/>
    <button class="btn btn-dark">
        Add
    </button>
 </form>  
</div> 
</div>