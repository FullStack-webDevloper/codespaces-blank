<style>
.searchbar{
  display: flex;
  margin-top:2rem;
  margin-left:20rem;
  margin-bottom: 3rem;
 
}
.searchbar:hover{
  opacity: 100%;
}
</style>


<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <!-- Brand Icon or Logo -->
    <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
    
    <!-- Toggler for small screens -->
    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Offcanvas (Sidebar) for Collapsed Menu -->
    <div class="offcanvas offcanvas-end bg-white" id="navbarNavAltMarkup">
      <div class="offcanvas-header">
        <h5 class="offcanvas-title">Menu</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
      </div>
      <div class="offcanvas-body">
        
        <!-- Left-aligned Links -->
        <div class="navbar-nav">
          <a class="nav-link" href="/listings">Explore</a>
        </div>
        
        <!-- Right-aligned Links -->
        <div class="navbar-nav ms-auto">
          <a class="nav-link" href="/listings/new">Airbnb your home</a>
          
          <!-- Conditional Rendering Based on User Authentication -->
          <% if(!currUser){ %>
            <a class="nav-link" href="/signup"><b>Signup</b></a>
            <a class="nav-link" href="/login"><b>Login</b></a>
          <% } %>
          <% if(currUser){ %>
            <a class="nav-link" href="/logout">Logout</a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</nav>
